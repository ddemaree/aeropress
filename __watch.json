{
  "install": "pnpm install && bundle install --path ./.data/bundler",
  "start": "bin/rails server -p $PORT -b 0.0.0.0",
  "watch": {
    "throttle": 100,
    "install": {
      "include": [
        "^Gemfile$", "^package.json$", "^.force-install"
      ]
    },
    "restart": {
      "include": [
        "\\.rb$"
      ]
    }
  }
}