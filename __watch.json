{
  "install": {
    "include": [
      "^package\\.json$"
    ]
  },
  "restart": {
    "exclude": [
      "^public/",
      "^dist/",
      "^.next/",
      "^pages/",
      "^styles/"
    ],
    "include": [
      "^\\.env$",
      "\\.js$",
      "\\.json$",
      "^\\.restart"
    ]
  },
  "throttle": 1000
}
